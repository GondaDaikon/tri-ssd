{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tool": "Edit|Write",
          "filePath": "\\.md$"
        },
        "command": "npx markdownlint-cli --fix \"$CLAUDE_FILE_PATH\""
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git checkout:*)"
    ]
  }
}
